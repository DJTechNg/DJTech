<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xlmns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@color/colorPrimary"
    android:fadeScrollbars="true"
    android:scrollbarSize="3dp"
    android:scrollbarFadeDuration="2000">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circular_imageview"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/john_esan"
                    />
                <TextView
                    android:id="@+id/member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JOHN ESAN"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/circular_imageview"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>
                <TextView
                    android:id="@+id/member_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/member_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="WEB DEVELOPER"
                    android:textColor="#fff"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/member_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/member_position"
                    android:layout_marginTop="12dp"
                    android:text="@string/john_profile"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                <LinearLayout
                    android:id="@+id/linear_layout1"
                    android:layout_below="@+id/member_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/phone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="phone"
                        android:text="+234-818-256-1710"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:textColorLink="#ffa"
                        android:layout_marginLeft="24dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_layout2"
                    android:layout_below="@+id/linear_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gmail"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="email"
                        android:text="john@djtech.com.ng"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_marginLeft="24dp"
                        android:textColorLink="#ffa"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_layout2"
                    android:background="#000"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/facebook_small"
                        android:clickable="true"
                        android:layout_weight="1"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/twitter_small"
                        android:layout_weight="1"
                        android:clickable="true"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/instagram"
                        android:layout_weight="1"
                        android:clickable="true"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>