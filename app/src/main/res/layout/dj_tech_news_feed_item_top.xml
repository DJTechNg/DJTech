<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/post_image_view"
        android:layout_width="77dp"
        android:layout_height="83dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/no_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintVertical_bias="0.032"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/post_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="The Importance of Mobile Apps"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/post_image_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.016"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/post_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1 hour ago, 4:35 PM"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.062"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/post_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/post_content_text_view"
        android:layout_width="251dp"
        android:layout_height="47dp"
        tools:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@+id/post_title_text_view"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:textAppearance="?android:textAppearance"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="391dp"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintRight_toRightOf="@+id/post_title_text_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/post_title_text_view"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.632" />

    <TextView
        android:id="@+id/post_author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="-By Cyberman"
        android:textSize="12sp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="457dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/post_title_text_view"
        app:layout_constraintLeft_toRightOf="@+id/post_time_text_view"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/post_title_text_view"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/post_author_avatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/post_author_avatar"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="C"
        app:layout_constraintLeft_toRightOf="@+id/post_author_text_view"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/post_author_text_view"
        android:layout_marginTop="-8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/post_author_text_view"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>